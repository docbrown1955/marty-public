import sys
import os.path

LOCAL_MARTY_BUILD_DIR = "@CMAKE_BINARY_DIR@"
MARTY_INSTALL_DIR = "@CMAKE_INSTALL_PREFIX@"


_MARTY_PATHS = [
    os.path.join(LOCAL_MARTY_BUILD_DIR),
    os.path.join(MARTY_INSTALL_DIR, "lib"),
]
for path in _MARTY_PATHS:
    sys.path.append(path)

try:
    import pymartyc
except ImportError as err:
    raise ImportError(
        "Could not import pymartyc, maybe MARTY is not installed ?\n"
        f"Tried {_MARTY_PATHS!r}\n"
    ) from err
